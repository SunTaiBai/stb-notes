{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["docs/.vitepress/*"],
    }
  },
  "include": [
    "docs",
    "docs/.vitepress/theme/*.ts",
    "docs/.vitepress/theme/components/*.vue",
    "docs/.vitepress/*.ts",
    "docs/.vitepress/components.d.ts",
    "docs/vite.config.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}